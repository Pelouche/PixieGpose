<UserControl x:Class="XivToolsWpf.Controls.RenameTextBox"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:XivToolsWpf.Controls"
			 mc:Ignorable="d" 
			 d:DesignHeight="450" d:DesignWidth="800"
			 IsVisibleChanged="OnIsVisibleChanged">
	<TextBox x:Name="TextArea" Text="{Binding Text}" Style="{StaticResource MaterialDesignTextBox}" PreviewKeyDown="TextArea_PreviewKeyDown" LostFocus="TextArea_LostFocus"/>
</UserControl>
