<UserControl x:Class="XivToolsWpf.Controls.Header"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
			 xmlns:ana="clr-namespace:XivToolsWpf.Controls"
			 mc:Ignorable="d" 
			 d:DesignHeight="450" d:DesignWidth="800">

	<StackPanel Orientation="Horizontal" x:Name="ContentArea">
		<ana:IconBlock Icon="{Binding Icon}" Margin="2, 2, 6, 0" Style="{StaticResource Header}" FontSize="10"/>
		<ana:TextBlock Text="{Binding Text}" Key="{Binding Key}" Style="{StaticResource Header}"/>
	</StackPanel>
</UserControl>
