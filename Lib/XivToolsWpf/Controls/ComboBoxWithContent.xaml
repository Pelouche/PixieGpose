<UserControl
	x:Class="XivToolsWpf.Controls.ComboBoxWithContent"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:XivToolsWpf.Controls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">
	<Grid x:Name="ContentArea">
		<Border
			Margin="0,3"
			Background="{StaticResource MaterialDesignBackground}"
			BorderBrush="{StaticResource MaterialDesignTextFieldBoxBackground}"
			BorderThickness="1"
			CornerRadius="5">

			<Border.Effect>
				<DropShadowEffect
					BlurRadius="10"
					Direction="270"
					Opacity="0.75"
					ShadowDepth="2" />
			</Border.Effect>

			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition />
				</Grid.RowDefinitions>

				<ComboBox
					x:Name="ComboBox"
					Grid.Row="0"
					md:HintAssist.Hint="{Binding Hint}"
					ItemTemplate="{Binding ComboBoxItemTemplate}"
					ItemsSource="{Binding ItemsSource}"
					SelectedItem="{Binding SelectedItem}"
					SelectionChanged="OnSelectionChanged"
					Style="{StaticResource FilledComboBox}" />

				<ContentControl
					Grid.Row="1"
					MinHeight="32"
					Margin="3"
					Content="{Binding SelectedContent}" />

			</Grid>
		</Border>
	</Grid>
</UserControl>
